@model Entities.Concrete.Category

@{
    ViewData["Title"] = "Kategori";
}

<h1>Kategori Ekle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıklama</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input id="IsActive" name="IsActive" type="checkbox" checked="checked" value="true" class="form-check-input" />
                <label for="IsActive" class="form-check-label">Aktif mi</label>
            </div>
            <div class="form-group mt-2 text-right">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Kategori Listesi</a>
</div>

@section scripts
{
    <script src="https://cdn.ckeditor.com/4.16.1/basic/ckeditor.js"></script>

    <script>
        CKEDITOR.replace('Description');
    </script>
}